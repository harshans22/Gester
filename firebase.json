{
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/home",
        "destination": "https://example.com/home",
        "type": 301
      },
      {
        "source": "/privacy-policy",
        "destination": "/privacy",
        "type": 301
      }
    ]
  }
}
